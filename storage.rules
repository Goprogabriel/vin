rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Alle billeder i mealImages-mappen kan læses offentligt
    match /mealImages/{userId}/{imageId} {
      allow read: if true; // Offentlig læsning
      allow write: if request.auth != null && request.auth.uid == userId; // Kun brugeren kan skrive
    }
    
    // Standard regler for andre filer
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
